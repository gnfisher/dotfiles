[user]
  name = Greg Fisher
  email = greg@gnfisher.com
[github]
  user = gnfisher
[init]
  defaultBranch = main
[core]
  excludesfile = ~/.gitignore
[help]
  autocorrect = 1
[alias]
  aa = add --all
  ca = !git commit --amend --verbose --date \"$(date)\"
  car = commit --amend --no-edit
  co = checkout
  copysha = !git rev-parse HEAD | xclip
  df = "!f() { [ \"$GIT_PREFIX\" != \"\" ] && cd $GIT_PREFIX; git diff -U10 --color $@ | less --tabs=4 -RFX; }; f"
  dfw = !git df -w
  dc = "!f() { [ \"$GIT_PREFIX\" != \"\" ] && cd $GIT_PREFIX; git diff --color --cached $@ | less --tabs=4 -RFX; }; f"
  dcw = !git dc -w
  fall = fetch --all
  glog = log -E -i --grep
  mup = !git checkout master && git fetch origin && echo && git sl master..origin/master && echo && git pull --quiet && git checkout -
  pl = pull
  ps = push
  rbc = rebase --continue
  rmup = !git mup && git rebase master
  sl = log --oneline --decorate -20
  sla = log --oneline --decorate --graph --all -20
  slp = log --oneline --decorate
  slap = log --oneline --decorate --graph --all
  uncommit = reset --soft HEAD^
  unstage = reset
[color]
  ui = true
[blame]
  date = short
[difftool]
  prompt = false
[merge]
  ff = only
  tool = vimdiff
  guitool = vimdiff
[mergetool]
  prompt = false
  keepBackup = false
[push]
  default = upstream
[fetch]
  prune = true
[status]
  showUntrackedFiles = normal
[grep]
  lineNumber = true
  patternType = extended
[include]
  ; path = ~/.gitconfig-gpg
  path = ~/.gitconfig-macos
[credential]
	helper =
	helper = /usr/local/share/gcm-core/git-credential-manager
[credential "https://dev.azure.com"]
	useHttpPath = true
[oh-my-zsh]
  hide-info = 1
