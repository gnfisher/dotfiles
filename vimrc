" Basic Settings
set nocompatible
syntax on
set number
set incsearch
set hlsearch
set ignorecase
set smartcase
set mouse=a
set clipboard=unnamed

" Indentation
set autoindent
set expandtab
set tabstop=2
set shiftwidth=2
set softtabstop=2

" Visual
set showmatch
set ruler
set wildmenu
set showcmd
set laststatus=2
set signcolumn=no

" Better split handling
set splitbelow
set splitright

" Quality of life
set hidden
set backspace=indent,eol,start
set history=1000
set scrolloff=3

let mapleader = " "

filetype plugin indent on
